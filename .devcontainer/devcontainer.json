{
  "name": "Python App Template",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "charliermarsh.ruff"
      ]
    },
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    }
  },
  "onCreateCommand": {
    "install-poetry": "pip install --user poetry",
    "config-poetry": "$HOME/.local/bin/poetry config virtualenvs.in-project true"
  },
  "postCreateCommand": {
    "git-safe": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    "install-deps": "$HOME/.local/bin/poetry install --with dev",
    "setup-precommit": "$HOME/.local/bin/poetry run pre-commit install",
    "ready": "echo 'âœ¨ Dev container setup complete!'"
  },
  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}/src",
    "PYTHONUNBUFFERED": "1"
  },
  "remoteEnv": {
    "PATH": "$HOME/.local/bin:${containerWorkspaceFolder}/.venv/bin:${containerEnv:PATH}"
  },
  "forwardPorts": [],
  "shutdownAction": "stopContainer",
  "remoteUser": "vscode"
}
