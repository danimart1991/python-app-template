{
  "name": "Python App Template",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/poetry:2": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "charliermarsh.ruff"
      ]
    },
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    }
  },
  "onCreateCommand": "poetry config virtualenvs.in-project true",
  "postCreateCommand": {
    "git-config": "git config --global core.editor 'code --wait' && git config --global --add safe.directory ${containerWorkspaceFolder}",
    "install-deps": "poetry install --with dev",
    "setup-precommit": "poetry run pre-commit install",
    "ready": "echo 'âœ¨ Dev container setup complete!'"
  },
  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}/src",
    "PYTHONUNBUFFERED": "1"
  },
  "remoteEnv": {
    "PATH": "${containerWorkspaceFolder}/.venv/bin:${containerEnv:PATH}"
  },
  "forwardPorts": [],
  "shutdownAction": "stopContainer",
  "remoteUser": "vscode"
}
