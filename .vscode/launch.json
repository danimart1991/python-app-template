{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Application",
      "type": "debugpy",
      "request": "launch",
      "module": "src.main",
      "args": [
        "--text",
        "Debug mode",
        "-vvvvv"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug Application (No Args)",
      "type": "debugpy",
      "request": "launch",
      "module": "src.main",
      "args": [
        "-vvvvv"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
